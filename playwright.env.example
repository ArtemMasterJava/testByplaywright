# Environment Configuration for Playwright Tests

# Base URL for tests (override in CI/CD or different environments)
BASE_URL=https://demo.playwright.dev

# Test configuration
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=5000
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# Browser configuration
HEADLESS=true
SLOW_MO=0

# CI/CD specific
CI=false
RETRIES=0
WORKERS=

# Test data
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# API endpoints (if testing APIs)
API_BASE_URL=https://api.example.com
API_KEY=your-api-key-here

# Database (if needed for test data setup)
DATABASE_URL=

# Debugging
DEBUG=false
TRACE=on-first-retry
SCREENSHOT=only-on-failure
VIDEO=retain-on-failure

# Report configuration
REPORT_OPEN=on-failure
